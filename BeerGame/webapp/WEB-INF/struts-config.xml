      <form-bean name="JoinGameForm"          type="jp.co.isken.beerGame.presentation.JoinGameForm" />
      <form-bean name="PlayerEntryForm"       type="jp.co.isken.beerGame.presentation.PlayerEntryForm" />
    </form-beans>

