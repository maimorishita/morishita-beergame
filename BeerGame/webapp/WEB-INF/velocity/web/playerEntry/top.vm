#parse("web/header.vm")
<head>
  <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
  <link rel="stylesheet" href="./css/style.css" type="text/css" />
  <title>ビールゲーム参加登録</title>
  <script type="text/javascript" language="javascript">
  <!--
    function entryPlayer(formObj) {
      formObj.command.value='entryPlayer';
      formObj.submit();
    }
  -->
  </script>
</head>
<body>
  <form action="$link.setAction($currentPath)" method="post" id="hiddenForm">
  <input type="hidden" name="command" />
  <div id="main">
#parse("web/errorList.vm")
    <table border=4>
      <tr>
        <td>チーム名</td>
        <td>
          <select name="kamoku1">
#foreach($game in $!currentForm.getWaitingGameList())
            <option value="$game.name">$game.name</option>
#end
          </select>
        </td>
      </tr>
      <tr>
        <td>プレイヤ名</td>
        <td><input type="text" name="playerName" value="$!{currentForm.playerName}" /></td>
      </tr>
      <tr>
        <td>ロール</td>
        <td>
          <select name="kamoku1">
#foreach($role in $!currentForm.getWaitingRoleList())
            <option value="$role.name">$role.name</option>
#end
          </select>
        </td>
      </tr>
      <tr>
        <td colspan=2 align=center><input type="button" value="登録" onClick="javascript:entryPlayer(this.form);" /></td>
      </tr>
    </table>
  </div>
  </form>
#parse("web/footer.vm")